doctype html
html
    head
        meta(charset='utf-8')
        script(type="text/javascript" src="https://cdn.staticfile.org/jquery/3.1.1/jquery.min.js")
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/main.css')
        title 登录

    body
        div.col-xs-5.col-md-3.col-xs-offset-4(style="border= 2px solid #ddd")
            div.row-centered
                h3.form-signin-heading 登录
            form.form-horizontal(method='POST' action='/signin')
                if error==undefined
                    div 用户名或密码错误
                div.col-md-12
                    //div(ng-hide='error') 用户或密码错误
                    div.username.form-group
                        label.control-label(for='username') 用户
                        input.form-control(id='username' name='username')
                    div.password.form-group
                        label.control-label(for='password') 密码
                        input.form-control(id='password' name='password')
                    div#submit
                        input.btn.btn-default(type='submit'  value='提交')
                        input.btn.btn-default(type='reset' value='重置')
 
